name: frontend
version: 0.1
cabal-version: >= 1.8
build-type: Simple

library
  hs-source-dirs: src
  build-depends: base
               , common
               , obelisk-frontend
               , obelisk-route
               , jsaddle
               , reflex-dom
               , obelisk-executable-config-lookup
               , obelisk-generated-static
               , containers
               , text
               , array
               , ghcjs-dom
               , safe
               , these
               , time
               , vector
               , data-default
               , aeson
               , lens
  exposed-modules:
    Frontend
    DocumentData
    ReadingPane
  ghc-options: -Wall

executable frontend
  if !arch(wasm32)
    main-is: main.hs
  else
    main-is: wasm-main.c
    build-depends: jsaddle-wasm
    ghc-options: -no-hs-main
    ld-options: -Wl,--export,jsaddleBufferMalloc -Wl,--export,jsaddleProcessResult
    other-modules: WasmMain

  hs-source-dirs: src-bin
  build-depends: base
               , common
               , obelisk-frontend
               , obelisk-route
               , reflex-dom
               , obelisk-generated-static
               , frontend
  --TODO: Make these ghc-options optional
  if !arch(wasm32)
     ghc-options: -threaded
  if os(darwin)
     ghc-options: -dynamic
